{
  "id": "system-resources",
  "name": "System Monitor",
  "version": "1.0.0",
  "description": "Monitor CPU, Memory, Network, and Browser resources",
  "author": "DevMe Team",
  "template": "template.html",
  "styles": "styles.css",
  "widgets": {
    "supported": [
      "clock",
      "cpu-monitor",
      "memory-monitor",
      "network-monitor",
      "tab-manager",
      "extension-manager"
    ],
    "default": [
      "clock",
      "cpu-monitor",
      "memory-monitor",
      "network-monitor",
      "tab-manager"
    ],
    "positions": {
      "clock": "header-clock",
      "cpu-monitor": "grid-1",
      "memory-monitor": "grid-2",
      "network-monitor": "grid-3",
      "tab-manager": "grid-4",
      "extension-manager": "grid-5"
    }
  },
  "cssVariables": {
    "--bg-primary": "#0a0a0a",
    "--bg-secondary": "#141414",
    "--text-primary": "#ffffff",
    "--text-secondary": "#888888",
    "--primary-color": "#4d90fe",
    "--accent-color": "#1DB5B5",
    "--border-color": "rgba(255, 255, 255, 0.1)",
    "--success-color": "#1DB5B5",
    "--warning-color": "#FFB713",
    "--danger-color": "#F63636"
  },
  "fonts": {
    "heading": "Inter",
    "body": "Inter"
  },
  "permissions": {
    "optional": ["system.cpu", "system.memory", "tabs", "management"]
  }
}
